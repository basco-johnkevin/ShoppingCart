= render partial: 'ckeckout_header', locals: { step: @step }
%main.raw
  = render partial: 'errors_messages', locals: { order: @order }
  = form_for @order, url: wizard_path do |f|
    .raw
      .col-md-8
        = render partial: 'credit_card', locals: { f: f, order: @order }
      .col-md-4
        = render partial: 'order_summary',
                 locals: { step: @step, order: @order }
    .raw
      .col-md-12.text-left
        = link_to_previous_step
        = f.hidden_field :id
        = f.submit t('checkout.continue'), class: 'btn'
        = link_to_confirmation if @order.has_all_data?
