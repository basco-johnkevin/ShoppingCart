!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Shopping cart
    = stylesheet_link_tag    "shopping_cart/application", media: "all"
    = javascript_include_tag "shopping_cart/application"
    = csrf_meta_tags
  %body
    .container
      - flash.each do |key, value|
        = content_tag :div, value,
                      class: "flash #{key} alert alert-warning",
                      role: 'alert'
      = render partial: 'shopping_cart/checkout/ckeckout_header', locals: { step: @step }
      %main.raw{id: "#{@step}_step"}
        = render partial: 'shopping_cart/checkout/errors_messages', locals: { order: @order }
        = yield
